{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalDependencies": [".env"],
  "globalEnv": ["RESEND_API_KEY", "RESEND_AUDIENCE_ID"],
  "tasks": {
    "format": {
      "dependsOn": ["^format"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "lint": {
      "dependsOn": ["^lint", "^typecheck"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"]
    },
    "build": {
      "dependsOn": ["^build", "^format", "^typecheck", "^lint"],
      "outputs": ["build/**"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
