{
	"include": [
		"**/*",
		"**/.server/**/*",
		"**/.client/**/*",
		".react-router/types/**/*",
		"../../packages/ui/src/**/*",
		"../../packages/utils/src/**/*",
		"../../packages/base-config/src/**/*"
	],
	"compilerOptions": {
		"lib": ["DOM", "DOM.Iterable", "ES2022"],
		"types": ["node", "vite/client"],
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"rootDirs": [".", "./.react-router/types"],
		"baseUrl": ".",
		"paths": {
			"~/*": ["src/*"],
			"@repo/ui/*": ["../../packages/ui/src/*", "../../packages/ui/dist/*"],
			"@repo/utils/*": ["../../packages/utils/src/*"],
			"@repo/base-config/*": ["../../packages/base-config/src/*"]
		},
		"esModuleInterop": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true
	}
}
