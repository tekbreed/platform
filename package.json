{
  "name": "platform",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "start": "turbo run start",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint --fix",
    "format": "prettier --write \"**/*.{ts,tsx,md,mdx,toml}\"",
    "typecheck": "turbo run typecheck",
    "test:run": "cross-env CI=true vitest run",
    "test:all": "vitest  --project unit --project browser",
    "test:unit": "vitest  --project unit --ui",
    "test:browser": "vitest  --project browser",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "turbo run test:e2e",
    "test:e2e:run": "turbo run test:e2e:run",
    "test:e2e:ui": "turbo run test:e2e:ui",
    "test:e2e:report": "turbo run test:e2e:report",
    "test:e2e:install": "playwright install --with-deps chromium"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@types/node": "^22",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/browser": "^3.2.4",
    "cross-env": "^10.1.0",
    "dotenv": "^16.0.3",
    "playwright": "^1.56.0",
    "prettier": "^3.6.2",
    "prettier-plugin-toml": "^2.0.6",
    "tsx": "^4.20.6",
    "turbo": "^2.5.8",
    "typescript": "5.9.2",
    "vite": "^7.1.7",
    "vitest": "^3.2.4",
    "vitest-browser-react": "^1.0.1",
    "zod": "^4.1.11"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "npm@11.5.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
