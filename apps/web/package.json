    "@repo/ui": "*",
    "@repo/utils": "*",
    "@vitejs/plugin-rsc": "^0.5.0",
    "fs-extra": "^11.3.2",
    "isbot": "^5.1.31",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router": "^7.9.4"
  },
  "devDependencies": {
    "@react-router/dev": "^7.9.4",
    "@repo/tests-config": "*",
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@tailwindcss/vite": "^4.1.13",
    "react-router-devtools": "^5.1.3",
    "tailwindcss": "^4.1.13",
    "vite-plugin-devtools-json": "^1.0.0",
