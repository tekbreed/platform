{
  "extends": "@repo/typescript-config/react-router.json",
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*",
    "../../packages/ui/src/**/*",
    "../../packages/utils/src/**/*",
    "../../packages/base-config/src/**/*"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@repo/ui/*": ["../../packages/ui/src/*", "../../packages/ui/dist/*"],
      "@repo/utils/*": ["../../packages/utils/src/*"],
      "@repo/base-config/*": ["../../packages/base-config/src/*"],
      "@repo/database/*": ["../../packages/database/src/*"]
    }
  },
  "rootDirs": [".", "./.react-router/types"]
}
